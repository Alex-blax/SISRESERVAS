@model SISRESERVAS.Models.usuario;
@{
}


<div class="container" style="position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);">
    <div class="row">
        <div class="col-sm-12">
            <h3>
                Iniciar Sesion
            </h3>
        </div>

    </div>
    <div class="row">
        <div class="col-sm-12">

            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>
                <div class="form-group">
                    <label asp-for="Correo"></label>
                    <input class="form-control" asp-for="Correo" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contraseña"></label>
                    <input class="form-control" asp-for="Contraseña" />
                    <span asp-validation-for="Contraseña" class="text-danger"></span>
                    <div class>
                        <input type="submit" value="Ingresar" class="btn btn-primary" style="position:absolute" /><br><br>
                        <a class="link-danger">Olvidaste tu Contraseña?</a>
                    </div><br>
                    <div class="col-sm-4">
                        <a class="btn btn-primary" asp-action="Crear" asp-controller="Usuarios">Registrarse</a>
                    </div>
            </form>
            
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
