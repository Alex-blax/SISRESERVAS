@model List<SISRESERVAS.Models.reserva>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-6">
        <h3>Lista de Reservas</h3>
    </div>
    <div class="col-sm-6">
        <a class="btn btn-success d-block" asp-action="Crear" asp-controller="Reserva">Agregar</a>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>
                Departamento
            </td>
            <td>
                Fecha
            </td>
            <td>
                Cantidad
            </td>
            <td>
                Conductor
            </td>
            <td>
                Bus
            </td>
            <td>
                Precio
            </td>
            <td>
                Acciones
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.departamento.nombredep</td>
                <td>@item.Fecha.ToShortDateString()</td>
                <td>@item.Cantidad</td>
                <td>@item.viaje.conductor</td>
                <td>@item.viaje.bus</td>
                <td>@item.departamento.precio</td>     
                <td>
                    <a class="btn btn-warning d-block" asp-action="Editar" asp-route-id="@item.Id" asp-controller="Reserva">Editar</a>
                    <a class="btn btn-danger d-block" asp-action="Eliminar" asp-route-id="@item.Id" asp-controller="Reserva">Eliminar</a>

                </td>

            </tr>
        }
    </tbody>
</table>

